<% provide(:title, "Posts") %>

  <% if fb_authenticated?(@user) %>
    <div class="postings">
    <ul id="post">
    <% @posts.each do |post| %>
        <li><h3 class="userinfo">
        <%= image_tag post['from']['picture']['data']['url'].to_s %>
        <%= post['from']['name'] %>
	<span>
	<%= post['created_time'].to_time.strftime("%b %d, %Y (%H:%M)") %> </span></h3>
        <p class="postcontent">
        <%= post['message'] %>
	</p> <span id="link"><%= link_to "Link", post['link'] %></span></li>
    <% end %>
    </ul>
    </div>

  <% else %>
    Couldn't retrieve posts.
  <% end %>

