<% provide(:title, "Posts") %>

  <% if fb_authenticated?(@user) %>
    <div class="container">
    <% @posts.each do |post| %>
        <li><h2><%= post.timeposted.strftime("%b %d, %Y (%H:%M)") %>
        <%= post.author %>
        <%= image_tag post.picture %>
        <%= post.message %>
        <%= link_to "Link", post.link %></h2></li>
    <% end %>
    </div>

  <% else %>
    Couldn't retrieve posts.
  <% end %>

